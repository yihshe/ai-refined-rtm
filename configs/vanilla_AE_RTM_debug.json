{
    "name": "VanillaAE_RTM",
    "n_gpu": 1,
    "arch": {
        "type": "VanillaAE_RTM",
        "args": {
            "input_dim": 11,
            "hidden_dim": 9,
            "rtm_para_names": {
                "N": {
                    "min": 1.0,
                    "max": 4.0
                },
                "cab": {
                    "min": 0.0,
                    "max": 100.0
                },
                "cw": {
                    "min": 0.002,
                    "max": 0.08
                },
                "cm": {
                    "min": 0.0,
                    "max": 0.05
                },
                "LAI": {
                    "min": 0.01,
                    "max": 15.0
                },
                "LAIu": {
                    "min": 0.01,
                    "max": 3.0
                },
                "sd": {
                    "min": 1.0,
                    "max": 50.0
                },
                "h": {
                    "min": 1.0,
                    "max": 50.0
                },
                "cd": {
                    "min": 1.0,
                    "max": 15.0
                }
            },
            "standardization": {
                "x_mean": "/maps/ys611/ai-refined-rtm/data/real/train_x_mean.npy",
                "x_scale": "/maps/ys611/ai-refined-rtm/data/real/train_x_scale.npy",
                "y_mean": "/maps/ys611/ai-refined-rtm/data/synthetic/20230529/train_y_mean.npy",
                "y_scale": "/maps/ys611/ai-refined-rtm/data/synthetic/20230529/train_y_scale.npy"
            }
        }
    },
    "data_loader": {
        "type": "SpectrumS2DataLoader",
        "args": {
            "data_dir": "data/real/BPWW_extract_2018_reshaped_train_scaled.csv",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        },
        "data_dir_valid": "data/real/BPWW_extract_2018_reshaped_valid_scaled.csv",
        "data_dir_test": "data/real/BPWW_extract_2018_reshaped_test_scaled.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false,
        "wandb": false
    }
}